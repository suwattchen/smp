# Global project metadata
COMPOSE_PROJECT_NAME=sunmart
SUNMART_NETWORK=sunmart_net
OBS_NETWORK=obs_net

# Core messaging
# URL for NATS JetStream used by core services
NATS_URL=nats://nats:4222
# Stream name for JetStream events
CORE_NATS_STREAM=events
# HTTP port for the core-go service inside its container
CORE_HTTP_PORT=8080

# Frontend
# Port the Next.js container listens on
FRONTEND_PORT=3000
# Base URL Kong uses to reach the frontend
FRONTEND_PUBLIC_URL=http://frontend:3000

# Postgres + PgBouncer
POSTGRES_USER=sunmart
POSTGRES_DB=sunmart
# Path to the Docker secret file that stores the Postgres password
POSTGRES_PASSWORD_FILE=/run/secrets/postgres_password
# PgBouncer listens on this port inside its container
PGBOUNCER_PORT=6432
# PgBouncer auth user (should match Postgres user)
PGBOUNCER_USER=sunmart
# Path to Docker secret file that stores the PgBouncer password
PGBOUNCER_PASSWORD_FILE=/run/secrets/pgbouncer_password
# PgBouncer pool mode (session, transaction, statement)
PGBOUNCER_POOL_MODE=transaction

# Kong
# Admin token stored as Docker secret for securing Kong admin API
KONG_ADMIN_TOKEN_FILE=/run/secrets/kong_admin_token
# Proxy listen port exposed on host for local dev (edge stack will use cloudflared)
KONG_PROXY_PORT=8000
# Admin API listen port for local dev
KONG_ADMIN_PORT=8001

# Cloudflare tunnel
# Credentials file generated from Cloudflare (JSON) mapped as Docker secret
CLOUDFLARE_TUNNEL_CRED_FILE=/run/secrets/cloudflared_credentials
TUNNEL_ID=update-me

# Observability
# Netdata claim token (optional) to attach to Netdata Cloud
NETDATA_CLAIM_TOKEN=
# Admin password file for Portainer CE
PORTAINER_ADMIN_PASSWORD_FILE=/run/secrets/portainer_admin_password
# Basic auth user for Prometheus (optional)
PROMETHEUS_BASIC_AUTH_USER=admin
# Basic auth password file for Prometheus
PROMETHEUS_BASIC_AUTH_PASSWORD_FILE=/run/secrets/prometheus_basic_auth_password

